<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frg_gen_swiperefresh"
        android:background="@color/colorBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Spinner
                android:id="@+id/frg_gen_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/dimen_small">
        </Spinner>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/frg_gen_spinner"
                android:id="@+id/frg_gen_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/content_list_news" />

        <ProgressBar
                android:id="@+id/frg_gen_progressbar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>