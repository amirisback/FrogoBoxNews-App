<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.frogobox.news">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_news_launcher"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_news_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.frogobox.news.mvp.about.AboutApiActivity">
        </activity>
        <activity android:name="com.frogobox.news.mvp.detail.NewsDetailActivity">
        </activity>
        <activity android:name="com.frogobox.news.mvp.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>